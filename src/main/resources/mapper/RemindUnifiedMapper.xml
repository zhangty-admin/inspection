<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.whir.hos.inspection.pc.dao.RemindUnifiedDao">

    <resultMap id="UnifiedRemindMap" type="net.whir.hos.inspection.pc.bean.RemindUnified" autoMapping="true">
        <id column="id" property="id"/>
        <collection property="departments" javaType="java.util.List" ofType="net.whir.hos.inspection.pc.bean.Department"
                    select="queryDepartment" column="id" autoMapping="true">
        </collection>
    </resultMap>


    <select id="selectUnifiedRemindPage" parameterType="net.whir.hos.inspection.pc.bean.RemindUnified"
            resultMap="UnifiedRemindMap">
            select * from remind_unified order by id desc
    </select>

    <!--一对多-->
    <select id="queryDepartment" resultType="net.whir.hos.inspection.pc.bean.Department" parameterType="map">
        select d.* from department d inner join department_unifiedRemind dr on d.id = dr.department_id where dr.unifiedRemind_id = #{id}
    </select>

</mapper>